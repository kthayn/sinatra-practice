<% if @note %>
	<p>Delete the following note: <em>"<%= @note.content %>"</em>?</p>
	<form action="/<%= @note.id %>" method="post">
		<input type="hidden" name="_method" value="delete">
		<input type="submit" value="Delete it!">
		<a href="/<%= @note.id %>">Cancel</a>
	</form>
<% else %>
	<p>Note not found.</p>
<% end %>